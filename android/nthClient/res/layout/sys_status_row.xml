<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="6dp" >
    
    <!-- Layout subsection for icon and title -->
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
	    <TextView
	        android:id="@+id/labelTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingLeft="10dp"
	        android:text="@string/labelTitle"
	        android:textSize="24sp" >
	    </TextView>

	    <TextView
	        android:id="@+id/labelTimeStamp"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/labelTimestamp"
	        android:gravity="right"
	        android:textSize="18sp" />
	    
    </LinearLayout>
    
    <!-- Layout for Detail information -->

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
	    
	    <ImageView
	        android:id="@+id/iconStatus"
	        android:src="@drawable/ic_launcher"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_marginLeft="25dp"
	        android:contentDescription="@string/icon_description" >
	    </ImageView>
	    
	    <TextView
	   		android:id="@+id/labelDescription"
	   		android:layout_toRightOf="@+id/iconStatus"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:text="@string/listDescriptionString"
	        android:textSize="22sp" >
	    </TextView>   
	    
	</RelativeLayout>

</LinearLayout>
